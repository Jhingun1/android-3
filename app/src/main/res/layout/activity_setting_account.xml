<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundcolor">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/account_bar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_chevron_left_white_18dp"
        app:title="Account" />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="?attr/cardbackgroundcolor"
            >
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="center_vertical"
                android:textSize="19dp"
                android:text="Account Number"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="right|center"
                android:textSize="19dp"
                android:text="123456"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="?attr/cardbackgroundcolor"
            android:layout_weight="1">
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="center_vertical"
                android:textSize="19dp"
                android:text="Name"/>
            <TextView android:layout_width="0dp"
                android:id="@+id/accounr_number"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="right|center"
                android:textSize="19dp"
                android:text="Team NULL"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="?attr/cardbackgroundcolor">
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="center_vertical"
                android:textSize="19dp"
                android:text="Gender"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="right|center"
                android:textSize="19dp"
                android:text="Male"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="?attr/cardbackgroundcolor">
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="center_vertical"
                android:textSize="19dp"
                android:text="Age"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="right|center"
                android:textSize="19dp"
                android:text="20"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="?attr/cardbackgroundcolor">
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="center_vertical"
                android:textSize="19dp"
                android:text="Height"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="right|center"
                android:textSize="19dp"
                android:text="185"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="?attr/cardbackgroundcolor">
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="center_vertical"
                android:textSize="19dp"
                android:text="Weight"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="right|center"
                android:textSize="19dp"
                android:text="70"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="50"
            android:background="?attr/backgroundcolor">
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="?attr/cardbackgroundcolor"
            android:layout_weight="1"
            android:id="@+id/logout">
            <TextView android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:textColor="?attr/textcolor"
                android:gravity="center"
                android:textSize="19dp"
                android:text="Logout"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>